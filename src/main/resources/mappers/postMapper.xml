<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 
 <mapper namespace = "com.yeye.memo.post.dao.PostDAO">
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO 
 			`post`
 		(
 			`userId`
 			, `subject`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES ( 
 			#{userId}
 			, #{subject}
 			, #{content}
 			, #{imagePath}
 			, now()
 			, now()
 		
 		)
 	</insert>
 	
 	<!--  메모 목록 -->
 	<select id="selectMemoList" 
 	parameterType="int"
 	resultType="com.yeye.memo.post.model.Post">
 		SELECT
 			`id`
 			, `userId`
 			, `subject`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`userId` = #{userId}
 		ORDER BY `id` DESC
 	</select>
 	
 	<!--  메모 상세 -->
 	<select id="selectMemo" 
 	parameterType="map"
 	resultType="com.yeye.memo.post.model.Post">
 		SELECT
 			`id`
 			, `userId`
 			, `subject`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`userId` = #{userId}
 			AND `id` = #{id}
 	</select>
 	<update id="updatePost" parameterType="map">
 		UPDATE
 			`post`
 		SET 
 			`subject` = #{subject}
 			, `content` = #{content}
 		WHERE
 			`id` = #{id}
 	</update>
 	<delete id="deletePost" parameterType="int">
 		DELETE FROM `post`
 		WHERE `id` = #{id}
 			AND `userId` = #{userId}
 	</delete>
 
 </mapper>